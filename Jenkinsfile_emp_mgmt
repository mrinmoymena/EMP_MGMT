pipeline {  

  agent any
  
 
  stages {
    
    stage('Checkout') {
      steps {
        git 'https://github.com/nileshkardile/EMP_MGMT.git'
      }
    }
   
    stage('Build & Create Docker') {
      steps{
        
		sh 'chmod -R 755 ${WORKSPACE}; cd ${WORKSPACE} ; ./mvnw package -Pprod verify jib:dockerBuild'
      }
    }
     stage('Docker Push') {
      steps{
       		echo "Verfied..."
                      
      }
    }
  }
}
